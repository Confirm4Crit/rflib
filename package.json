{
    "name": "reliability-force",
    "private": true,
    "version": "0.1.0",
    "description": "Salesforce library for improving the reliability of your org",
    "scripts": {
        "create-build": "sfdx force:apex:test:run --codecoverage -r human --wait 10 && sfdx force:package:version:create --skipvalidation --path force-app --package RFLIB --installationkeybypass --wait 10",
        "lint": "npm run lint:lwc && npm run lint:aura",
        "lint:lwc": "eslint **/lwc/**",
        "lint:aura": "sfdx force:lightning:lint force-app/main/default/aura --exit",
        "test": "npm run lint && npm run test:unit",
        "test:unit": "lwc-jest",
        "test:unit:watch": "lwc-jest --watch",
        "test:unit:debug": "lwc-jest --debug",
        "test:unit:coverage": "lwc-jest --coverage",
        "prettier": "prettier --write '**/*.{cmp,component,css,html,js,json,md,page,yaml,yml}'",
        "prettier:verify": "prettier --list-different '**/*.{html,js,json,yaml,yml,md,cmp,page,component}'"
    },
    "author": "Johannes Fischer",
    "license": "BSD-3-Clause",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/j_fischer/rflib"
    },
    "engines": {
        "node": ">= 10.13.0",
        "npm": ">= 6.5.0"
    },
    "devDependencies": {
        "@salesforce/eslint-config-lwc": "^0.3.0",
        "@salesforce/lwc-jest": "^0.6.2",
        "eslint": "^5.16.0",
        "grunt": "^1.0.4",
        "grunt-bump": "^0.8.0",
        "grunt-prompt": "^1.3.3",
        "grunt-semver": "^0.1.9",
        "grunt-shell": "^3.0.1",
        "husky": "^1.3.1",
        "jit-grunt": "^0.10.0",
        "lint-staged": "^8.1.5",
        "prettier": "^1.17",
        "semver": "^5.7.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run lint:aura"
        }
    },
    "lint-staged": {
        "**/*.{html,js,json,yaml,yml,md,cmp,page,component}": [
            "prettier --write"
        ],
        "**/lwc/**": [
            "eslint"
        ],
        "*": [
            "git add"
        ]
    }
}
